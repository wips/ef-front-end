<h1>Scrabbed images</h1>
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <form>
                <th><button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-filter"></span></button></th>
                <th><input class="form-control" type="text" placeholder="Title" name="title"></th>
                <th><input class="form-control" type="text" placeholder="User Id" name="user"></th>
                <th><input class="form-control" type="text" placeholder="Width" name="width"></th>
                <th><input class="form-control" type="text" placeholder="Height" name="height"></th>
            </form>
        </tr>
    </thead>
    <tbody>
        {{#each images.models}}
            <tr>
                <td>{{@index}}</td>
                <td>
                    <a href="{{this.attributes.url}}" target="_blank">
                        {{this.attributes.title}}
                    </a>
                </td>
                <td>{{this.attributes.user}}</td>
                <td>{{this.attributes.width}}</td>
                <td>{{this.attributes.height}}</td>
            </tr>
        {{else}}
            <tr class="info">
                <td colspan="5">Nothing has been found. We're very sorry about that :(</td>
            </tr>
        {{/each}}
        <!--<tr class="info">-->
            <!--<td colspan="5">Loading...</td>-->
        <!--</tr>-->
    </tbody>
</table>